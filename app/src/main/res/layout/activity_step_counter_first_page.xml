<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#70C0F5"
    tools:context=".StepCounterFirstPage">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="67dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="96dp"
            android:layout_height="67dp"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:text="Name : "
            android:textSize="20dp"
            android:textStyle="bold">

        </TextView>

        <EditText
            android:id="@+id/person_name"
            android:layout_width="251dp"
            android:layout_height="match_parent"
            android:hint="name : ">

        </EditText>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="132dp"
        android:orientation="vertical">

        <RadioButton
            android:id="@+id/Man_button"
            android:layout_width="113dp"
            android:layout_height="60dp"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:text="Man "
            android:textSize="20dp"
            android:textStyle="bold">

        </RadioButton>

        <RadioButton
            android:id="@+id/Woman_button"
            android:layout_width="113dp"
            android:layout_height="58dp"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:text="Woman"
            android:textSize="20dp"
            android:textStyle="bold">

        </RadioButton>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="67dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="85dp"
            android:layout_height="67dp"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:text="Height"
            android:textSize="20dp"
            android:textStyle="bold">

        </TextView>

        <EditText
            android:id="@+id/height_foot_text"
            android:layout_width="76dp"
            android:layout_height="match_parent"
            android:inputType="number"
            android:hint="Exa:5 : ">

        </EditText>

        <EditText
            android:id="@+id/height_inch_text"
            android:layout_width="81dp"
            android:layout_height="match_parent"
            android:inputType="number"
            android:hint="Exa:5 : ">

        </EditText>

        <TextView
            android:layout_width="103dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="foot-inch"
            android:textSize="20dp"
            android:textStyle="bold">

        </TextView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="67dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="94dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:text="Weight"
            android:textSize="20dp"
            android:textStyle="bold">

        </TextView>


        <EditText
            android:id="@+id/weight_text"
            android:layout_width="151dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:inputType="number"
            android:hint="Exa:60 : ">

        </EditText>

        <TextView
            android:layout_width="103dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="KG"
            android:textSize="20dp"
            android:textStyle="bold">

        </TextView>

    </LinearLayout>


    <Button
        android:id="@+id/savebutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save"
        android:layout_marginTop="15dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:textSize="20dp"
        android:textStyle="bold"
        android:onClick="store_data_front_page"
        >

    </Button>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="61dp"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/Recordlist_button"
            android:layout_width="154dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:text="RecordList"
            android:textSize="20dp"
            android:textStyle="bold"
            android:onClick="showDataFromFirebase"
            >

        </Button>

        <Button
            android:id="@+id/NextButton"
            android:layout_width="116dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="70dp"
            android:gravity="center"
            android:text="Next"
            android:textSize="20dp"
            android:textStyle="bold"
            android:onClick="showStepCounter"
            >

        </Button>

    </LinearLayout>


</LinearLayout>